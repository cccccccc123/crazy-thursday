    <script>
        // DOM加载后执行
        document.addEventListener('DOMContentLoaded', function() {
            // 获取元素
            const vButton = document.querySelector('.v-button');
            const modalOverlay = document.getElementById('modalOverlay');
            const closeButton = document.getElementById('closeButton');
            
            // 点击按钮显示收款码
            vButton.addEventListener('click', function() {
                modalOverlay.classList.add('modal-active');
                vButton.textContent = '感恩V我50';
                vButton.style.background = 'linear-gradient(to bottom, #e8c000, #d9a100)';
            });
            
            // 关闭弹窗
            closeButton.addEventListener('click', function() {
                modalOverlay.classList.remove('modal-active');
            });
            
            // 点击背景关闭弹窗
            modalOverlay.addEventListener('click', function(e) {
                if (e.target === modalOverlay) {
                    modalOverlay.classList.remove('modal-active');
                }
            });
            
            // 修改标题为小红书风格（仅用于分享显示）
            document.title = "安徽三日游超详细攻略 | 黄山+宏村+西递精华路线 - 小红书";
            
            // 为装饰元素添加更多随机性
            const elements = document.querySelectorAll('.kfc-logo');
            elements.forEach(el => {
                const size = Math.random() * 4 + 2;
                el.style.fontSize = `${size}rem`;
                el.style.opacity = Math.random() * 0.4 + 0.1;
            });
        });
    </script>
